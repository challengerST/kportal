<%- include ../base/header.ejs %>

<div class="app-box">
    <div class="forget-box">
        <div class="container">
            <div class="st1">
                <p class="please-register">重置密码</p>

                <div class="input fill tel">
                    <label for="mail">手机号：</label>
                    <input type="text" id="mail" class="lg-input" autocomplete="off"/>
                    <span class="dp-b fl-l wrong hide">您输入的手机号错误</span>
                </div>
                <!--<div class="input validate">-->
                    <!--<label for="validate">验证码：</label>-->
                    <!--<input id="validate" type="text" placeholder="请输入图片验证码" class="lg-input" autocomplete="off">-->
                    <!--<img src="" id="code" alt="图片验证" class="validate-img">-->
                    <!--<span class="dp-b fl-l wrong hide">验证码错误</span>-->
                <!--</div>-->
                <div class="input validate fill">
                    <label class="dp-b fl-l" for="code"><span class="star">*</span>验证码：</label>
                    <div id="captcha">
                        <p id="wait">正在加载验证码......</p>
                    </div>
                    <span class="info wrong dp-n fl-l" id="notice">请完成验证</span>
                </div>
                <div class="input validate fill">
                    <label for="tel-pwd">短信验证码：</label>
                    <input id="tel-pwd" type="text" class="lg-input" autocomplete="nope">
                    <button id="send-pwd" class="md-btn white-btn">获取验证码</button>
                    <span class="dp-b fl-l wrong hide">验证码错误</span>
                </div>
                <div class="input">
                    <label for="new-pwd">新密码：</label>
                    <input type="password" id="new-pwd" class="lg-input" placeholder="6-20位的密码，必须由数字和英文组合" autocomplete="new-password"/>
                    <span class="dp-b fl-l wrong hide">密码格式错误</span>
                </div>
                <button class="send-mail md-btn blue-btn">重置密码</button>
            </div>
        </div>
    </div>
</div>

